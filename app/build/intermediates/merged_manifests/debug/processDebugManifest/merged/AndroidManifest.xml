<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reza.form"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.reza.form.Login.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        //LOGIN ADMIN ACTIVITY
        <activity
            android:name="com.example.reza.form.Login.LoginAdminActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        //LOGIN USER ACTIVITY
        <activity
            android:name="com.example.reza.form.Login.LoginUserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        //TANGGAL SURVEY AREA
        <activity
            android:name="com.example.reza.form.TanggalSurveyArea"
            android:label="@string/Tanggal_Survey" />
        //INFO KABUPATEN DAN KOTA
        <activity
            android:name="com.example.reza.form.InfoKabKota"
            android:label="@string/Info_Kab_Kota" />
        //INFO DETAIL SERVEY AREA
        <activity
            android:name="com.example.reza.form.InformasiDetailSurveyArea"
            android:label="@string/Info_detail_survey" />
        //IDENTITAS SURVEYOR
        <activity
            android:name="com.example.reza.form.Identita_Surveyor"
            android:label="@string/Identitas_Surveyor" />
        <activity android:name="com.example.reza.form.AdminActivity" />
    </application>

</manifest>